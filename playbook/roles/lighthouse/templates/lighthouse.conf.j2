server {
    listen       {{ lighthouse_nginx_port }};
    server_name  _;
    root         {{ lighthouse_root }};
    index        index.html;

    location / {
        try_files $uri $uri/ =404;
    }

    access_log /var/log/nginx/{{ lighthouse_nginx_site_name }}/access.log;
    error_log  /var/log/nginx/{{ lighthouse_nginx_site_name }}/error.log;
}